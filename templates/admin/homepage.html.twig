{% extends 'base.html.twig' %}

{% block title %}Homepage
{% endblock %}

{% block body %}

<div class="container">

		<h1 class="text-center my-5">Welcome <strong> {{app.user.username|capitalize}},</strong> this is your back office {{app.user.roles[0]|slice(5)|capitalize }}</h1>

	{% if is_granted('ROLE_ADMIN') %}

	{#--------------------------------------ADMIN------------------------------------------------------#}

		<div class="row justify-content-center">
			<a href="{{ path('schools') }}" class="main-card col-10 col-md-5 mx-3 my-3 c-green d-flex align-items-center justify-content-center style-shadow style-rounded">
				<div class="display-4 d-flex flex-column justify-content-center align-items-center text-center">
                    My school
                    <i class="fas fa-school"></i>
                </div>
			</a>

			<a href="{{ path('create_school') }}" class="main-card col-10 col-md-5 mx-3 my-3 c-green d-flex align-items-center justify-content-center style-shadow style-rounded">
				<div class="display-4 d-flex flex-column justify-content-center align-items-center text-center">
                    Add a school
                    <i class="fas fa-plus-circle"></i>
				</div>
			</a>
		</div>
		{#-------------------------------------FIN ADMIN---------------------------------------------------#}

	{% elseif is_granted('ROLE_SCHOOL') %}

		{#--------------------------------------SCHOOL------------------------------------------------------#}

		<div class="row justify-content-center">
			<a href="{{ path('my_school_infos', {'id': app.user.id}) }}" class="main-card col-10 col-md-5 mx-3 my-3 c-green d-flex align-items-center justify-content-center style-shadow style-rounded">
