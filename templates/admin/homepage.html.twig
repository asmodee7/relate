                    <i class="fas fa-users"></i>
                </div>
			</a>

			<a href="" class="main-card col-10 col-md-5 mx-3 my-3 c-green d-flex align-items-center justify-content-center style-shadow style-rounded">
				<div class="display-4 d-flex flex-column justify-content-center align-items-center text-center">
                    Contact
                    <i class="fas fa-question-circle"></i>
				</div>
			</a>

			<a href="{{ path('new_teacher') }}" class="main-card col-10 col-md-5 mx-3 my-3 c-green d-flex align-items-center justify-content-center style-shadow style-rounded">
				<div class="display-4 d-flex flex-column justify-content-center align-items-center text-center">
                    Add a teacher
                    <i class="fas fa-plus-circle"></i>
				</div>
			</a>
		</div>
		{#-------------------------------------FIN SCHOOL---------------------------------------------------#}
    
    
		{% elseif is_granted('ROLE_TEACHER') %}

