			<a href="{{ path('create_classroom') }}" class="main-card col-10 col-md-5 mx-3 my-3 c-green d-flex align-items-center justify-content-center style-shadow style-rounded">
				<div class="display-4 d-flex flex-column justify-content-center align-items-center text-center">
                    Create classroom
                    <i class="fas fa-school"></i>
				</div>
			</a>

			<a href="{{ path('teacher_classrooms') }}" class="main-card col-10 col-md-5 mx-3 my-3 c-green d-flex align-items-center justify-content-center style-shadow style-rounded">
				<div class="display-4 d-flex flex-column justify-content-center align-items-center text-center">
                    My classrooms
                    <i class="fas fa-users"></i>
				</div>
			</a>

			<a href="{{ path('create-student') }}" class="main-card col-10 col-md-5 mx-3 my-3 c-green d-flex align-items-center justify-content-center style-shadow style-rounded">
				<div class="display-4 d-flex flex-column justify-content-center align-items-center text-center">
                    Create student
                    <i class="fas fa-plus-circle"></i>
				</div>
			</a>

			<a href="{{ path('assoc_classroom') }}" class="main-card col-10 col-md-5 mx-3 my-3 c-green d-flex align-items-center justify-content-center style-shadow style-rounded">
				<div class="display-4 d-flex flex-column justify-content-center align-items-center text-center">
                    New Partnership
                    <i class="fas fa-people-arrows"></i>
