      	<div class="row justify-content-center">
			<a href="{{ path('my_teacher_profile', {'id': app.user.id}) }}" class="main-card col-10 col-md-5 mx-3 my-3 c-green d-flex align-items-center justify-content-center style-shadow style-rounded">
				<div class="display-4 d-flex flex-column justify-content-center align-items-center text-center">
                    Profile
                    <i class="fas fa-user-alt"></i>
				</div>
