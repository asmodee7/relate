                    Create classroom
                    <i class="fas fa-school"></i>
            	</div>
			</a>
		</div>
		<br>
		<div class="d-flex flex-row justify-content-center">
		    <a href="{{ path('teacher_classrooms') }}" class="text-center d-flex justify-content-center align-items-center c-green mx-3 border border-dark col-6">
			<div class="display-4 d-flex flex-column justify-content-center align-items-center choice-h">
                    My classrooms
                    <i class="fas fa-users"></i>
            	</div>
			</a>
			<a href="{{ path('create-student') }}" class="text-center d-flex justify-content-center align-items-center c-green mx-3 border border-dark col-6">
				<div class="display-4 d-flex flex-column justify-content-center align-items-center choice-h">
                    Create student
                    <i class="fas fa-plus-circle"></i>
            	</div>
			</a>
		</div>
