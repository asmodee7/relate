{% extends 'base.html.twig' %}

{% block title %}Homepage
{% endblock %}

{% block body %}

<div class="d-flex flex-column mx-auto">
		<h1 class=" text-center my-5">Welcome
		<span>
			{{app.user.username}},
		</span>
		this is your back office
		{{app.user.roles[0]|slice(5)|capitalize }}


	</h1>

	{% if is_granted('ROLE_ADMIN') %}

		{#--------------------------------------ADMIN------------------------------------------------------#}

		<div class="row justify-content-center">
			<a href="{#{{ path('') }}#}" class="text-center d-flex justify-content-center align-items-center c-green border border-dark col-6">
				<div class="display-4 d-flex flex-column justify-content-center align-items-center choice-h">
                    My school
                    <i class="fas fa-school"></i>
                </div>
			</a>
		</div>
		<br>
		<div class="row justify-content-center ">
		    <a href="{{ path('create_school') }}" class="text-center d-flex justify-content-center align-items-center c-green border border-dark col-6">
				<div class="display-4 d-flex flex-column justify-content-center align-items-center choice-h">
                    Add a school
                    <i class="fas fa-plus-circle"></i>
            	</div>
			</a>
		</div>
		{#-------------------------------------FIN ADMIN---------------------------------------------------#}

	{% elseif is_granted('ROLE_SCHOOL') %}

		{#--------------------------------------SCHOOL------------------------------------------------------#}

		<div class="d-flex flex-row justify-content-center">
			<a href="{#{{ path('') }}#}" class="text-center d-flex justify-content-center align-items-center c-green mx-3">
				<div class=" display-4 d-flex flex-column justify-content-center align-items-center border border-dark choice-h choice-w">
                    Profile
                    <i class="fas fa-school"></i>
                </div>
			</a>
