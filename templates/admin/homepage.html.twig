                    Teachers
                    <i class="fas fa-users"></i>
                </div>
			</a>
		</div>
		<br>
		<div class="d-flex flex-row justify-content-center">
			<a href="{#{{ path('') }}#}" class="text-center d-flex justify-content-center align-items-center c-green mx-3">
				<div class="display-4 d-flex flex-column justify-content-center align-items-center border border-dark choice-h choice-w">
                    Contact
                    <i class="fas fa-question-circle"></i>
            	</div>
			</a>
			<a href="{{ path('new_teacher') }}" class="text-center d-flex justify-content-center align-items-center c-green mx-3">
				<div class="display-4 d-flex flex-column justify-content-center align-items-center border border-dark choice-h choice-w">
                    Add a teacher
                    <i class="fas fa-plus-circle"></i>
            	</div>
			</a>
		</div>
		{#-------------------------------------FIN SCHOOL---------------------------------------------------#}

	{% elseif is_granted('ROLE_TEACHER') %}

		{#--------------------------------------TEACHER------------------------------------------------------#}

		<div class="d-flex flex-row justify-content-center">
		    <a href="{#{{ path('') }}#}" class="text-center d-flex justify-content-center align-items-center c-green mx-3 border border-dark col-6">
				<div class="display-4 d-flex flex-column justify-content-center align-items-center choice-h">
                    Profile
                    <i class="fas fa-user-alt"></i>
            	</div>
			</a>
			<a href="{{ path('create_classroom') }}" class="text-center d-flex justify-content-center align-items-center c-green mx-3 border border-dark col-6">
