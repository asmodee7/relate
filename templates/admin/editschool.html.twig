{% extends 'base.html.twig' %}

{% block title %}Admin | Edit School
{% endblock %}

{% block body %}

	<div class="container relate-body d-flex flex-column align-items-center justify-content-center">

		<h1 class="text-center p-5">Edit School</h1>

		<div class="d-flex col-10 col-md-8 flex-column justify-content-center align-items-center">


			{{ form_start(formEditSchool, {'attr': {'class': "col-10 col-md-8 pb-3", 'novalidate': 'novalidate'}} ) }}

			{{ form_row(formEditSchool.school_name, {'attr': {'placeholder': "School Name"}})}}
			{{ form_row(formEditSchool.country, {'attr': {'placeholder': "Country"}})}}
			{{ form_row(formEditSchool.language, {'attr': {'placeholder': "Language"}})}}
			{{ form_row(formEditSchool.user_firstname, {'attr': {'placeholder': "Firstname"}})}}
			{{ form_row(formEditSchool.user_lastname, {'attr': {'placeholder': "Lastname"}})}}
			{{ form_row(formEditSchool.username, {'attr': {'placeholder': "Username"}})}}
			{{ form_row(formEditSchool.user_position, {'attr': {'placeholder': "Position"}})}}

			<div class="col-12 d-flex justify-content-center">
				<button type="submit" class="text-center btn btn-peche my-3 text-white mx-auto">Save changes</button>
			</div>
			{{ form_end(formEditSchool)}}

		</div>

	</div>


{% endblock %}
