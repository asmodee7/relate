{% extends 'base.html.twig' %}
{% block title %}Relate | Teacher Profile
{% endblock %}

{% block body %}

<div class="container relate-body">

	<h1>My Profile</h1>

	<div class="content">
		<img class="image_profile" src="{{ asset('uploads/photo/' ~ teacher.photo) }}" alt="">
		
		<h2>{{ teacher.firstname}} {{ teacher.lastname}}</h2>
        <span>{{ teacher.email}}</span>
        <span>{{ teacher.phonenumber}}</span>
        <span>{{ teacher.language}}</span>
		<p>{{ teacher.description}}</p>
	</div>

	<a href="{{ path('edit_my_teacher_profile', {'id': teacher.id}) }}" class="btn btn-success my-3">Editer</a>

</div>
{% endblock %}