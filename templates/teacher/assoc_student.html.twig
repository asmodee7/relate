                        <td>{{item.music}}</td>
                        <td>{{item.otherHobbies}}</td>
                        {# {{dump(item.studentDuos)}} #}
                    </tr>
                    {% endfor %}
                {% endfor %}
        </table>
    </div>
</div>
    <form action="" method="post">
        <div class="row justify-content-center">

            <div class="form-group col-6">
                <label for="student_1">Sélection de mon student</label>
                <select class="form-control" name="student_1" id="student_1">
                    {% for students in classroomOne %}
                        {% for item in students.students %}
                            <option value="{{item.id}}">{{ item.firstname }} {{ item.lastname }}</option>
                        {% endfor %}
                    {% endfor %}
                </select>
            </div>

            <div class="form-group col-6">
                <label for="student_2">Sélection de l'autre student</label>
                <select class="form-control" name="student_2" id="student_2">
                    {% for students in classroomTwo %}
                        {% for item in students.students %}
                            <option value="{{item.id}}">{{ item.firstname }} {{ item.lastname }}</option>
                        {% endfor %}
                    {% endfor %}
                </select>
            </div>

            <div class="col-12 d-flex justify-content-center">
                <button type="submit" class="btn btn-peche text-white my-3">Create a student duo</button>
            </div>

        </div>

    </form>

