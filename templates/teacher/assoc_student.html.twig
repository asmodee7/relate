{% extends 'base.html.twig' %}

{% block title %}Teacher | Duodata
{% endblock %}

{% block body %}

    <div class="row">
    {% for classroomData in classroomOne %}
        <h1 class="col-6 text-center my-4">{{ classroomData.classroomName}}, {{ classroomData.grade}}</h1>
    {% endfor %}
    {% for classroomData in classroomTwo %}
        <h1 class="col-6 text-center my-4">{{ classroomData.classroomName}}, {{ classroomData.grade}}</h1>
    {% endfor %}
    </div>
<div class="row">
    <div class="col-6">
        <table class="table table-hover table-bordered">
        <tr>
            <th>Nom</th>
            <th>Prénom</th>
            <th>Sport</th>
            <th>Musique</th>
            <th>Autres intérêts</th>
        </tr>
            {% for students in classroomOne %}
                {% for item in students.students %}
                    <tr>
                        <td>{{ item.lastname }}</td>
                        <td>{{item.firstname}}</td>
                        <td>{{item.sport}}</td>
                        <td>{{item.music}}</td>
                        <td>{{item.otherHobbies}}</td>
                    </tr>
                {% endfor %}
            {% endfor %}
        </table>
    </div>
    <div class="col-6">
        <table class="table table-hover table-bordered">
