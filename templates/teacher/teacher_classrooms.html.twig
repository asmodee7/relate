{% extends 'base.html.twig' %}

{% block title %}Homepage
{% endblock %}

{% block body %}

	<h1 class=" text-center mt-2 pb-1">Mes classes</h1>
	<hr>
	<br>

    <div class="row justify-content-center">

    {% for classroom in myClassrooms.classrooms %}

    <div class="col-md-5">
        <table class="table text-center table-hover table-bordered">
            <tr>
                <th class="display-4">
                    <a href="{#{{path('')}}#}">
                        {{ classroom.classroomName }}<br><i class="fas fa-users"></i>
                    </a>
                </th>
            </tr>
        </table>
	</div>
        
    {% endfor %}

    <div class="col-md-5">
        <table class="table text-center table-hover table-bordered">
