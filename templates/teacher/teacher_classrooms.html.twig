{% extends 'base.html.twig' %}

{% block title %}Homepage
{% endblock %}

{% block body %}

	<h1 class=" text-center mt-2 pb-1">My classrooms</h1>
	<br>

	<div class="row justify-content-center">

		{% for classroom in myClassrooms.classrooms %}

			<div class="col-md-5">
				<table class="table text-center table-hover table-bordered choice-h">
					<tr>
						<th class="display-4">
							<a href="{{ path('teacher_showclassroom', {'id': classroom.id }) }}">
								{{ classroom.classroomName }}<br><i class="fas fa-users"></i>
							</a>
						</th>
					</tr>
				</table>
			</div>

		{% endfor %}

		<div class="col-md-5">
			<table class="table text-center table-hover table-bordered choice-h">
				<tr>
					<th class="display-4">
						<a href="{#{{path('')}}#}">
							Add a classroom<br><i class="fas fa-users"></i>
						</a>
					</th>
				</tr>
			</table>
		</div>

	</div>


{% endblock %}
