{% extends 'base.html.twig' %}

{% block title %}Hello Teacher !{% endblock %}

{% block body %}

	<h4 class="text-center my-3">New Classroom:
	</h4>

	<div class="container">
		{{ form_start(classroomForm, {'attr': {'class': 'col-md-5 mx-auto'}}) }}

		{{ form_row(classroomForm.grade, {'label': "Grade"} )}}
		{{ form_row(classroomForm.classroomName, {'label': "Classroom Name"} )}}

		<div class="text-center my-3">
			<button type="submit" class="btn btn-peche text-white text-center">Create the classroom</button>
		</div>

		{{ form_end(classroomForm, {'attr': {'class': 'col-md-5 mx-auto'}}) }}

	</div>

{% endblock %}