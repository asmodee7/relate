{% extends 'base.html.twig' %}

{% block title %}Relate | Student partners
{% endblock %}

{% block body %}

<div class="container relate-body">

		<h1 class=" text-center my-5">My partners</h1>

		<div class="row justify-content-center">

			{% for duo in myDuos %}

				<a href="{{ path('student_exchanges', {'id': duo.id }) }}" class="main-card col-10 col-md-5 mx-3 my-3 c-green d-flex align-items-center justify-content-center style-shadow style-rounded">
					<div class="display-4 d-flex flex-column justify-content-center align-items-center text-center responsiveblock">

					{% for student in students %}

						{% if student.id == duo.student1 and duo.student1 != userid %}

							{{ student.firstname }}
							{{ student.lastname }}

							{% elseif student.id == duo.student2 and duo.student2 != userid %}

							{{ student.firstname }}
							{{ student.lastname }}

						{% endif %}
						
					{% endfor %}
						<i class="fas fa-comment-dots"></i>
					</div>
				</a>

			{% endfor %}

		</div>

</div>

{% endblock %}