{% extends 'base.html.twig' %}

{% block title %}Relate | Edit Student Profile
{% endblock %}

{% form_theme formEditStudent 'bootstrap_4_layout.html.twig' %}

{% block body %}
	<h1>Edit Student Profile</h1>

	{{ form_errors(formEditStudent) }}

	{{ form_start(formEditStudent)}}

	{{ form_row(formEditStudent.firstname, {'attr': {'placeholder': "First Name"}})}}
	{{ form_row(formEditStudent.lastname, {'attr': {'placeholder': "Last Name"}})}}
	{{ form_row(formEditStudent.age, {'attr': {'placeholder': "Age"}})}}
	{{ form_row(formEditStudent.photo, {'attr': {'placeholder': "Photo"}})}}
	{{ form_row(formEditStudent.description, {'attr': {'placeholder': "Description"}})}}
	{# {{ form_row(formEditStudent.sport, {'attr': {'placeholder': "Sport"}})}}
		{{ form_row(formEditStudent.music, {'attr': {'placeholder': "Music"}})}}
		{{ form_row(formEditStudent.other_hobbies, {'attr': {'placeholder': "Other Hobbies"}})}} #}

	<label>Sport
	</label>
	<select name="sport" id="" class="form-control">
		<option value="football">football</option>
		<option value="tennis">tennis</option>
		<option value="volleyball">volleyball</option>
		<option value="basketball">basketball</option>
		<option value="golf">golf</option>
		<option value="aquabike">aquabike</option>
	</select>

	<label>Music</label>
	<select name="music" id="" class="form-control">
		<option value="rap">rap</option>
		<option value="pop">pop</option>
		<option value="jazz">jazz</option>
		<option value="techno">techno</option>
		<option value="soul">soul</option>
		<option value="yodeling">yodeling</option>
	</select>

	<label>Other Hobbies</label>
	<select name="OtherHobbies" id="" class="form-control">
		<option value="video-games">video-games</option>
		<option value="travel">travel</option>
		<option value="shopping">shopping</option>
		<option value="cinema">cinema</option>
		<option value="photography">photography</option>
		<option value="guitare-couture">guitare-couture</option>
	</select>


	<button type="submit" class="btn btn-success my-3">Save changes</button>

	{{ form_end(formEditStudent)}}

{% endblock %}
