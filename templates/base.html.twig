<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome Relate !
			{% endblock %}
		</title>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
		{% block stylesheets %}
			<link rel="preconnect" href="https://fonts.gstatic.com">
			<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;400;600&display=swap" rel="stylesheet">
			<link rel="stylesheet" href="{{ asset('css/style.css')}}">
		{% endblock %}
	</head>
	<body>
	<header>
		<nav class="nav relate-nav bg-green row">
			<div class="nav-left col-10 d-flex align-items-center justify-content-start">
				<a class="nav-link" href="#">Accueil</a>
				<a class="nav-link" href="#">Mon profil</a>
				<a class="nav-link" href="#">Mes correspondances</a>
				<a class="nav-link" href="#">Mes discussions</a>
				<a class="nav-link" href="#">Contacter mon professeur</a>
			</div>
			<div class="nav-right col-2 d-flex align-items-center justify-content-end">
			{% if app.user %}
				<a class="nav-link" href="{{ path('logout') }}">Deconnexion</a>
			{% else %}
				<a class="nav-link" href="{{ path('login') }}">Connexion</a>
			{% endif %}
				
			</div>
		</nav>
	</header>

		<div class="container relate-body">
		{% block body %}
		{% endblock %}
		</div>
			
	<footer class="row bg-green justify-content-center">
		<div class="relate-footer col-4 d-flex justify-content-center align-items-center ">
			<a class="text-white p-3 nav-link" href="#">Contactez-nous</a>
			<a class="text-white p-3 nav-link" href="#">Mentions l√©gales</a>
			<a class="text-white p-3 nav-link" href="#">Copyright</a>
		</div>
	</footer>

	{% block javascripts %}
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
	{% endblock %}

	</body>
	</html>
