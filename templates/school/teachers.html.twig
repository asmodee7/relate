{% extends 'base.html.twig' %}

{% block title %}Homepage | Teachers
{% endblock %}

{% block body %}

	<h1 class=" text-center mt-2 pb-1">Teachers</h1>
	<br>

	<div class="row justify-content-center">

		{% for teacher in teachers %}

			<div class="col-md-5">
				<table class="table text-center table-hover table-bordered choice-h">
					<tr>
						<th class="display-4">
                            <p>Id of the Teacher{{ teacher.id }}</p>
							<a href="{{ path('teachers', {'id': teacher.id }) }}">
								{{ teacher.firstname }}<br><i class="fas fa-users"></i>
							</a>
						</th>
					</tr>
				</table>
			</div>

		{% endfor %}

		<div class="col-md-5">			
			<a href="{{path('new_teacher')}}">Create new Teacher</a>
		</div>

	</div>


{% endblock %}